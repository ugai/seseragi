            }
        }

        HorizontalBox {
            Text {
                text: "File: ";
                visible: file_path != "";
                horizontal-stretch: 0;
            }
            Text {
                text: file_path;
                horizontal-alignment: left;
                horizontal-stretch: 1;
            }
        }

        ScrollView {
            preferred-width: scroll_inner.preferred-width;
